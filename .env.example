# ==============================
# üîê Database Configuration
# ==============================
# Replace <username>, <password>, <host>, <port>, and <database> with your database details
DATABASE_URL="postgresql://<username>:<password>@<host>:<port>/<database>?pgbouncer=true"
DIRECT_URL="postgresql://<username>:<password>@<host>:<port>/<database>"

# ==============================
# üõ†Ô∏è Supabase Configuration
# ==============================
SUPABASE_URL="https://<your-supabase-project>.supabase.co"
SUPABASE_SERVICE_ROLE_KEY="<your-supabase-service-role-key>" # Full access key; keep this secret
SUPABASE_ANON_KEY="<your-supabase-anon-key>"                 # Public access key for client-side usage
SUPABASE_JWT_SECRET="<your-supabase-jwt-secret>"             # JWT secret for token verification
SUPABASE_STORAGE_BUCKET="<your-supabase-storage-bucket>"     # Name of the storage bucket

# ==============================
# ‚úâÔ∏è Email Service Configuration
# ==============================
BREVO_API_KEY="<your-brevo-api-key>"                        # Brevo (Sendinblue) API key
EMAIL_FROM_NAME="Acme Support"                              # Name for outgoing emails
EMAIL_FROM_ADDR="support@example.com"                       # Email address for outgoing emails
SEND_EMAILS=false                                           # Toggle email sending (true/false)
ENABLE_NOTIFICATIONS=false                                  # Enable email notifications (true/false)

# ==============================
# üì¶ Storage Provider Configuration
# ==============================
# STORAGE_PROVIDER options:
# - "supabase": Uses Supabase Storage
# - "local": Stores files on local server
STORAGE_PROVIDER="supabase"

# ==============================
# üåé Base URL Configuration
# ==============================
NEXTAUTH_URL="http://localhost:3000"                        # Full URL of the application
NEXT_PUBLIC_APP_URL="http://localhost:3000"                 # Base URL used in the client-side app

# ==============================
# üîë Authentication Configuration (NextAuth)
# ==============================
NEXTAUTH_SECRET="<your-nextauth-secret>"                    # Secret for NextAuth encryption
NODE_ENV="production"                                       # Options: "development", "production"
AUTH_METHOD="credentials"                                   # Options: "credentials", "auth0"
NEXT_PUBLIC_AUTH_METHOD="credentials"                       # Frontend config for auth toggle

# ==============================
# üõ†Ô∏è Auth0 Configuration
# ==============================
AUTH0_CLIENT_ID="<your-auth0-client-id>"                     # Public client ID for Auth0 application (Frontend login)
AUTH0_CLIENT_SECRET="<your-auth0-client-secret>"             # Secret for Auth0 application (used in server routes)
AUTH0_ISSUER_BASE_URL="https://<your-domain>.auth0.com"      # Your Auth0 domain (without trailing slash)
AUTH0_DB_CONNECTION="Username-Password-Authentication"       # Auth0 Database Connection name (usually "Username-Password-Authentication")
AUTH0_M2M_CLIENT_ID="<your-auth0-m2m-client-id>"             # M2M (Machine-to-Machine) Client ID for management APIs (e.g. signup, password reset)
AUTH0_M2M_CLIENT_SECRET="<your-auth0-m2m-client-secret>"     # M2M client secret (server-only usage)
AUTH0_MGMT_AUDIENCE="https://<your-domain>.auth0.com/api/v2/" # Audience for Auth0 Management API (used in server routes)

# ==============================
# üìÑ File Upload Settings
# ==============================
# Allowed MIME types for file uploads:
# - "application/pdf": PDF files
# - "image/png": PNG images
# - "image/jpeg": JPEG images
# - "image/gif": GIF images
ALLOWED_FILE_TYPES="application/pdf,image/png,image/jpeg,image/gif" # Comma-separated list of allowed file types
SUPPORTED_VIEW_TYPES="application/pdf,image/png,image/jpeg,image/gif" # Types viewable inside app
MAX_FILE_SIZE_MB=1                                           # Maximum file size allowed (in MB)

# ==============================
# ‚è≥ Link Expiration Settings
# ==============================
# Set default expiration time for generated links (in seconds)
DEFAULT_TTL="86_400"

# ==============================
# ‚öôÔ∏è Miscellaneous Settings
# ==============================
# Toggle debugging logs (true/false)
DEBUG_LOGS=false

# Allowed environments for deployment
# Options: "development", "production", "local"
DEPLOYMENT_ENVIRONMENT="development"
NEXT_PUBLIC_DEPLOYMENT_ENVIRONMENT="development"
IS_DOCKER=false
